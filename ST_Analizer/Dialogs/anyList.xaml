<Window x:Class="OneClickUI.Dialogs.anyList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="List" Height="372" Width="566">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="277" Margin="10,54,0,0" VerticalAlignment="Top" Width="538" x:Name="anylist">
            <ListBox.ItemTemplate >
                <DataTemplate>

                    <StackPanel Orientation="Vertical">
                        <TextBox Text="{Binding Path=Name, Mode=TwoWay}" Width="500" FontWeight="Bold" IsReadOnly="False"/>
                        <TextBox Text="{Binding Path=Description, Mode=TwoWay}" Width="500" FontWeight="Light" FontSize="11" IsReadOnly="False"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        <Label Content="Список S7 проектов" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
